<div class="container">
  <h1 class="content"> Sign In </h1>
  <%= form_for(:user, url: sessions_path, method: :post) do |f| %>
    <ul class="content">
      <% @user.errors.full_messages.each do |err| %>
        <li><%= err %></li>
      <% end %>
    </ul>
    <p class="content">
      <%= f.label :Name %> </br>
      <%= f.text_field :username %>
    </p>
    <p class="content">
      <%= f.submit "Sign in" %>
    </p>
  <% end %>
  <p class="content">
    <%= link_to "Sign up?", new_user_path, method: :get,class: "session_links" %>
  </p>
</div>

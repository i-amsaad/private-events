<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= image_tag "logo.png",  style: 'float:left;height:80px;width:250px;'  %></br>
    <% if session[:id]!=nil %>
      <div class="username">
        <h1 class="content"><%= session[:username] %></h1>
      </div>
      <div class="logout">
        <%= button_to "Log out", session_path(session[:id]), method: :delete%>
      </div>
    <%end%>
    <% flash.each do |name, msg| -%>
      <h4 class="content"><%= msg %></h4>
    <% end -%>
  </br></br></br>
    <%= yield %>
  </body>
</html>
